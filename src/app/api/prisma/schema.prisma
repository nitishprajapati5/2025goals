generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Registration{
  id Int @id @default(autoincrement())
  username String @unique
  name String
  email String
  password String
  leafs JournalLeafs[]
}

model Journal{
  id Int @id @default(autoincrement())
  journalName String 
  isDisabled Boolean @default(false)
  leafs JournalLeafs[]
}

model JournalLeafs{
  id Int @id @default(autoincrement())
  journalId Int
  journal Journal @relation(fields: [journalId],references: [id])
  userId Int
  user Registration @relation(fields: [userId],references: [id])
  journalTitle String
  journalDescription String?
  journalContent String @db.LongText()
  journalImage String?
}
